<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/view1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toLeftOf="@+id/view2"
        android:layout_above="@+id/view4"
        android:background="#f23204" />

    <TextView
        android:id="@+id/view2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/view5"
        android:layout_toLeftOf="@+id/view3"
        android:background="#FF5722" />

    <TextView
        android:id="@+id/view3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#FFEB3B"
        android:layout_above="@+id/view6"
        android:layout_toRightOf="@+id/view5"/>

    <TextView
        android:id="@+id/view4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toLeftOf="@+id/view5"
        android:layout_centerVertical="true"
        android:background="#8BC34A" />

    <TextView
        android:id="@+id/view5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#009688"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/view6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#00BCD4"
        android:layout_toRightOf="@+id/view5"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/view7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#2196F3"
        android:layout_below="@+id/view4"
        android:layout_toLeftOf="@+id/view5"/>

    <TextView
        android:id="@+id/view8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#3F51B5"
        android:layout_below="@id/view5"
        android:layout_toRightOf="@id/view4"/>

    <TextView
        android:id="@+id/view9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#9C27B0"
        android:layout_toRightOf="@id/view5"
        android:layout_below="@id/view6"/>


</RelativeLayout>